// Firebase Firestore Security Rules Configuration
// Apply these rules in Firebase Console: Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin (with fallback)
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         request.auth.token.admin == true);
    }
    
    function emailsMatch(targetEmail) {
      return targetEmail != null && request.auth != null && request.auth.token.email != null &&
        lower(targetEmail) == lower(request.auth.token.email);
    }

    function isSameUser(targetUid, targetEmail) {
      return (targetUid != null && request.auth != null && request.auth.uid == targetUid) || emailsMatch(targetEmail);
    }

    // Users Collection Rules
    match /users/{userId} {
      // Get: Admins can read all. Authenticated users can read their own profile (by UID or email match).
      allow get: if isAdmin() || (
        isAuthenticated() && (
          request.auth.uid == userId || (resource != null && emailsMatch(resource.data.email))
        )
      );

      // List/Query: Only admins (prevents employees from enumerating all users)
      allow list: if isAdmin();
      
      // Create: Anyone can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Update: Users can update their own, admins can update anyone
      allow update: if isAuthenticated() && (isAdmin() || request.auth.uid == userId);
      
      // Delete: Only admins
      allow delete: if isAdmin();
    }
    
    // Tasks Collection Rules - PERMISSIVE for development
    match /tasks/{taskId} {
      // Read: All authenticated users can read
      allow read: if isAuthenticated();
      
      // Create: All authenticated users can create
      allow create: if isAuthenticated() && request.resource.data.keys().hasAll(['title']);
      
      // Update: Admins can update all, employees can update assigned tasks
      allow update: if isAuthenticated() && 
        (isAdmin() || (resource.data.assignedTo != null && request.auth.uid == resource.data.assignedTo));
      
      // Delete: Only admins
      allow delete: if isAdmin();
    }
    
    // Activity Logs Collection Rules - PERMISSIVE for development
    match /activityLogs/{logId} {
      // Read: All authenticated users
      allow read: if isAuthenticated();
      
      // Create: All authenticated users
      allow create: if isAuthenticated();
      
      // Update/Delete: Only admins
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Assignments Collection Rules
    match /assignments/{assignmentId} {
      // Read: All authenticated users
      allow read: if isAuthenticated();
      
      // Create: All authenticated users
      allow create: if isAuthenticated();
      
      // Update: Admins and assigned employees
      allow update: if isAuthenticated() && 
        (isAdmin() || request.auth.uid == resource.data.employeeId);
      
      // Delete: Only admins
      allow delete: if isAdmin();
    }
    
    // Attendance Collection Rules
    match /attendance/{attendanceId} {
      // Read: All authenticated users can read
      allow read: if isAuthenticated();
      
      // Create: All authenticated users can create
      allow create: if isAuthenticated();
      
      // Update: Admins can update all attendance records
      allow update: if isAdmin();
      
      // Delete: Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Status Requests Collection Rules (for approval workflow)
    match /statusRequests/{requestId} {
      // Read: All authenticated users can read
      allow read: if isAuthenticated();
      
      // Create: All authenticated users can create
      allow create: if isAuthenticated();
      
      // Update: Only admins can update (approve/reject)
      allow update: if isAdmin();
      
      // Delete: Only admins can delete
      allow delete: if isAdmin();
    }

    // Behavior Marks Collection Rules (for manager panel)
    match /behaviorMarks/{markId} {
      // Read: All authenticated users can read
      allow read: if isAuthenticated();
      
      // Create: Only admins can create behavior marks
      allow create: if isAdmin();
      
      // Update: Only admins can update behavior marks
      allow update: if isAdmin();
      
      // Delete: Only admins can delete behavior marks
      allow delete: if isAdmin();
    }

    // KPI Scores Collection Rules
    match /kpi/{kpiId} {
      // Read: Admins or KPI owner (matched by uid/email or encoded doc id prefix)
      allow read: if isAdmin() || (
        isAuthenticated() && (
          (resource.data.userId != null && resource.data.userId == request.auth.uid) ||
          emailsMatch(resource.data.userEmail) ||
          (request.auth.uid != null && kpiId.matches(request.auth.uid + "_.*"))
        )
      );

      // Create: Only admins can create KPI scores
      allow create: if isAdmin();

      // Update/Delete: Only admins can modify KPI scores
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Notifications Collection Rules
    match /notifications/{notificationId} {
      // Read: Admins and intended recipients
      allow read: if isAdmin() || (
        isAuthenticated() && (
          (resource.data.recipientUid != null && resource.data.recipientUid == request.auth.uid) ||
          emailsMatch(resource.data.recipientEmail)
        )
      );

      // Create/Update/Delete: Only admins can manage notifications
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
